{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": ["node_modules/**", "docs/**", "dist/**"],
    "rules": {
        "max-len": ["error"],
        "no-use-before-define": "off",
        "@typescript-eslint/no-use-before-define": ["error"]
    }
}
